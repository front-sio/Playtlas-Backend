# Database Configuration
# Update these with your actual PostgreSQL credentials

# Main database (used by most services)
DATABASE_URL="postgresql://postgres:password@localhost:5432/billard_game"

# Service-specific databases (optional - can use DATABASE_URL for all)
AUTH_DATABASE_URL="postgresql://postgres:password@localhost:5432/billard_auth"
PLAYER_DATABASE_URL="postgresql://postgres:password@localhost:5432/billard_player"
ADMIN_DATABASE_URL="postgresql://postgres:password@localhost:5432/billard_admin"

# Environment
NODE_ENV="development"

# JWT Configuration (for auth-service)
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Service URLs (for inter-service communication)
WALLET_SERVICE_URL="http://localhost:3002"
NOTIFICATION_SERVICE_URL="http://localhost:3005"
PAYMENT_SERVICE_URL="http://localhost:3006"

# Other configurations
LOG_LEVEL="debug"
