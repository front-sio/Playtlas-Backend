PORT=3003
NODE_ENV=development

# Database
PAYMENT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pool_game_payment

# Service URLs
WALLET_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=payment-service

# M-Pesa/Lipa Namba Configuration (Tanzania)
MPESA_ENABLED=false
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=your_shortcode
MPESA_PASSKEY=your_passkey
MPESA_API_URL=https://api.safaricom.co.ke
MPESA_CALLBACK_URL=https://yourdomain.com/api/payment/callback/mpesa

# Lipa Namba (TIGO PESA - Tanzania)
TIGO_ENABLED=false
TIGOPESA_API_KEY=your_tigopesa_api_key
TIGOPESA_API_SECRET=your_tigopesa_api_secret
TIGOPESA_BILLER_CODE=your_biller_code
TIGOPESA_API_URL=https://api.tigo.co.tz
TIGOPESA_CALLBACK_URL=https://yourdomain.com/api/payment/callback/tigopesa
TIGO_LIPA_NUMBER=your_lipa_number

# Vodacom M-Pesa (Tanzania)
VODACOM_API_KEY=your_vodacom_api_key
VODACOM_API_SECRET=your_vodacom_api_secret
VODACOM_BUSINESS_NUMBER=your_business_number
VODACOM_API_URL=https://openapi.m-pesa.com
VODACOM_CALLBACK_URL=https://yourdomain.com/api/payment/callback/vodacom

# Airtel Money (Tanzania)
AIRTEL_ENABLED=false
AIRTEL_CLIENT_ID=your_airtel_client_id
AIRTEL_CLIENT_SECRET=your_airtel_client_secret
AIRTEL_API_URL=https://openapi.airtel.africa
AIRTEL_CALLBACK_URL=https://yourdomain.com/api/payment/callback/airtel
AIRTEL_LIPA_NUMBER=your_lipa_number

# Halopesa (Tanzania)
HALOPESA_ENABLED=false
HALOPESA_API_KEY=your_halopesa_api_key
HALOPESA_MERCHANT_ID=your_merchant_id
HALOPESA_API_URL=https://api.halopesa.co.tz
HALOPESA_CALLBACK_URL=https://yourdomain.com/api/payment/callback/halopesa
HALOPESA_LIPA_NUMBER=your_lipa_number

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_for_verification

# Limits
MIN_DEPOSIT_AMOUNT=1000
MAX_DEPOSIT_AMOUNT=5000000
MIN_WITHDRAWAL_AMOUNT=5000
MAX_WITHDRAWAL_AMOUNT=10000000
DAILY_WITHDRAWAL_LIMIT=20000000

# Fees (in TZS)
WITHDRAWAL_FEE_PERCENTAGE=1
WITHDRAWAL_MIN_FEE=500
WITHDRAWAL_MAX_FEE=10000
