// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

model User {
  userId              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username            String    @unique
  email               String    @unique
  password            String
  firstName           String?
  lastName            String?
  gender              String? @db.VarChar(10)
  phoneNumber         String    @unique
  payoutPhoneNumber   String? // Kept for backward compatibility or other uses, PayoutMethod is for detailed payouts
  role                String    @default("player")
  isActive            Boolean   @default(true)
  isVerified          Boolean   @default(false)
  verificationMethod  String?   @default("email")
  walletId            String?   @db.Uuid
  skillLevel          Int       @default(1)
  matchesPlayed       Int       @default(0)
  matchesWon          Int       @default(0)
  matchesLost         Int       @default(0)
  lastLogin           DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  refreshTokens       RefreshToken[]
  verificationCodes   VerificationCode[]
  payoutMethods       PayoutMethod[] // Relation to PayoutMethod

  @@map("users")
}

model VerificationCode {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String    @db.Uuid
  code              String
  type              String    @default("email")
  isUsed            Boolean   @default(false)
  expiresAt         DateTime
  createdAt         DateTime  @default(now())

  user              User      @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("verification_codes")
}

model RefreshToken {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @db.Uuid
  token             String
  createdAt         DateTime @default(now())

  user              User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("refresh_tokens")
}

// Model for storing user payout methods, including provider and account number
model PayoutMethod {
  payoutMethodId      String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId              String    @db.Uuid
  providerName        String    // e.g., "M-Pesa", "Tigo Pesa", etc.
  accountNumber       String    // The Lipa Na M-Pesa Till or Paybill number
  isDefault           Boolean   @default(false)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user                User      @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("payout_methods")
}
