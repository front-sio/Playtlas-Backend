generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("GAME_DATABASE_URL")
}

model GameSession {
  sessionId   String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tableId     String?   @db.Uuid
  player1Id   String    @db.Uuid
  player2Id   String    @db.Uuid
  status      String    @default("pending")
  gameState   Json?
  result      Json?
  metadata    Json?
  player1Ready Boolean  @default(false)
  player2Ready Boolean  @default(false)
  player1ConnectionTime DateTime?
  player2ConnectionTime DateTime?
  player1Connected Boolean @default(false)
  player2Connected Boolean @default(false)
  startedAt   DateTime?
  endedAt     DateTime?
  lastActivityAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("game_sessions")
}
